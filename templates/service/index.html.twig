{% extends 'base.html.twig' %}

{% block title %}Indice de Servicios{% endblock %}

{% block body %}
    <h1>Indice de Servicios</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Folio</th>
                <th>Detalles</th>
                <th>Es facturable</th>
                <th>Fue atendido</th>
                <th>Creado en</th>
                <th>Fecha de la cita</th>
                <th>Atendido en</th>
                <th>acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.folio }}</td>
                <td>{{ service.details }}</td>
                <td>{{ service.isBillable ? 'Sí' : 'No' }}</td>
                <td>{{ service.isServed ? 'Sí' : 'No' }}</td>
                <td>{{ service.createdAt ? service.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ service.createdAt ? service.dueDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ service.servedAt ? service.servedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('service_show', {'id': service.id}) }}">mostrar</a>
                    <a href="{{ path('service_edit', {'id': service.id}) }}">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('service_new') }}">Crear nuevo</a>
{% endblock %}
